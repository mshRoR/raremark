

  <% flash.each do |type, msg| %>
    <div class="alert alert-info"  role="alert">
      <%= msg %>
    </div>
  <% end %>

    <h1>Active Users</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
      <th>Country</th>
      <th>Gender</th>
      <th>Disease</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.profile.profile_type %></td>
        <td><%= user.profile.country.iso2 %></td>
        <td><%= user.profile.gender %></td>
        <td><%= user.disease_histories.last.disease.name %></td>
        <td><%= link_to 'Show', user , class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary"%></td>
        <td><%= link_to 'Suspend', suspend_user_path(user), method: :put, data: { confirm: 'Are you sure?' },  class: "btn btn-warning" %></td>
        <td><%= link_to 'Delete', delete_user_path(user), method: :put, data: { confirm: 'Are you sure?' },  class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path , class: "btn btn-success" %>