<div class="container">
  <div class="col-md-6">
    <h1>User Details of: <%= @user.name %></h1>
    <ul class="list-group">
      <li class="list-group-item"><b>Name</b>: <%= @user.name %></li>
      <li class="list-group-item"><b>Email</b>: <%= @user.email %></li>
      <li class="list-group-item"><b>Gender</b>: <%= @user.profile.gender %></li>
      <li class="list-group-item"><b>Birth Year</b>: <%= @user.profile.born_year %></li>
      <li class="list-group-item"><b>Birth Month</b>: <%= @user.profile.month_name %></li>
      <li class="list-group-item"><b>Country</b>: <%= @user.profile.country.name %></li>
      <li class="list-group-item"><b>Profile Type</b>: <%= @user.profile.profile_type %></li>
      <h4>Diseases History</h4>
      <% @user.disease_histories.each do |history| %>
      <li class="list-group-item"><b>Disease</b>: <%= history.disease.name %> </li>
        <% end %>
    </ul>
  </div>
</div>