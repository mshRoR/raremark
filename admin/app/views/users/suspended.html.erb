<p id="notice"><%= notice %></p>

<h1>Suspended Users (<%= @users.count %>)</h1>

<table  class="table table-striped">
  <thead>
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Email</th>
    <th>Type</th>
    <th>Country</th>
    <th>Gender</th>
    <th>Disease</th>
    <th>Suspend At</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each_with_index do |user, i| %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.profile.profile_type %></td>
      <td><%= user.profile.country.iso2 %></td>
      <td><%= user.profile.gender %></td>
      <td><%= user.disease_histories.last.disease.name %></td>
      <td><%= user.suspended_at %></td>
      <td><%= link_to 'Reactivate', reactivate_user_path(user), method: :put, data: { confirm: 'Are you sure?' },  class: "btn btn-warning" %></td>
   </tr>
  <% end %>
  </tbody>
</table>
